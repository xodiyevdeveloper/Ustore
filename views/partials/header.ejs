<% var user %>
<div class="header-area">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="user-menu">
                    <ul>
                        <% if (user) { %>
                            <li><a href="/account"><i class="fa fa-user"></i> <%= user.name%>'s account</a></li>
                            <li><a href="/cart"><i class="fa fa-user"></i> <%= user.name%>'s cart</a></li>
                            <li><a href="/checkout"><i class="fa fa-user"></i> Checkout</a></li>
                        <% } else { %>
                            <li><a href="/login"><i class="fa fa-sign-in"></i> Login</a></li>
                            <li><a href="/signup"><i class="fa fa-plus"></i> Sign up</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="site-branding-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="logo">
                    <h1><a href=""><img src="/public/img/logo.png"></a></h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="<%= activePath === '/' ? 'active' : '' %>"><a href="/">Home</a></li>
                    <li class="<%= activePath === '/shop' ? 'active' : '' %>"><a href="/shop">Shop page</a></li>
                    <li class="<%= activePath === '/cart' ? 'active' : '' %>"><a href="/cart">Cart</a></li>
                    <li class="<%= activePath === '/checkout' ? 'active' : '' %>"><a href="/checkout">Checkout</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2><%= bigTitle %></h2>
                </div>
            </div>
        </div>
    </div>
</div>